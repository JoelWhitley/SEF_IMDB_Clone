#parse("/velocity/layout.vm")
#@mainLayout()

<h1>Search Movies</h1>
<form id="searchTitleForm" method="post">

    <label>Search by Show Title</label>
    <input type="text" name="showTitleSearch" placeholder="Show Title" value="" required>
    <input type="submit" value="Search">
</form>


<form id="searchPersonForm" method="post">
    <label>Search by Person</label>
    <input type="text" name="showPersonSearch" placeholder="Person Name" value="" required>
    
	<input type="submit" value="Search">
</form>



#end