#parse("/velocity/layout.vm")
#@mainLayout()
<div id = "content">	
	#if($show) 
	<h1>$show.showTitle</h1>
	<label>Length: $show.length hrs</label><br>
	<label>Genre: $show.genre</label><br>
	#else
	<h1>not found</h1>
	#end
		
	
</div>

<div id = "content">
	<h2>Cast and crew</h2>
	<label>Cast members</label><br>
	<label>Crew members</label>
</div>

<div id = "content">

	<h2>User Ratings</h2>
	#if($reviews)
	<label>5-Star ***** : $fiveRating, $fivePercent %</label><br>
	<label>4-Star **** : $fourRating, $fourPercent %</label><br>
	<label>3-Star *** : $threeRating, $threePercent %</label><br>
	<label>2-Star ** : $twoRating, $twoPercent %</label><br>
	<label>1-Star * : $oneRating, $onePercent %</label><br>
	#else
	<label>No User Ratings Yet</label><br>
	#end 

	<h2>Reviews</h2>
	#if($reviews)
	#foreach($review in $reviews)
	<div id = "content">
	<a class="user" href="/user/$review.username"> 
		<h3>$review.username </h3>
			</a>
            <h2>$review.rating / 5 </h2>
            #if($review.review)
            	<div style="width:600px;height:150px;overflow:auto;padding:5px;"> $review.review </div>	
           	#end
        </div>
        #end
        #else
        <label> There aren't any user reviews for $show.showTitle yet. </label>
        #end
        #if($currentUser)
        	<form id="userReviewForm" method="post">
        	<select name="Rating" size="5" required>
  					<option value="1">1</option>
  					<option value="2">2</option>
  					<option value="3">3</option>
  					<option value="4">4</option>
  					<option value="5">5</option>
				</select>
	    		<h4><label>Leave a review here</label></h4>
	    		<textarea name="review" rows="10" cols="60"placeholder="Type your review here" value=""></textarea>
	    		<input type="submit" value="Submit">
			</form>
			
			<form id="deleteReviewForm" method="post">
	    		<h4><label>Press to delete previous review</label></h4>
	    		<select name="Check" size="1" required>
	    			<option value="Yes">Yes</option>
	    		</select>
	    		<input type="submit" value="Delete">
			</form>
		#else
			<h2> You must <a href="/login" >log in</a> to leave a review </h2>
		#end
</div>


#end